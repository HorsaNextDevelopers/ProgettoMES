        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Articoli.CodiceArticolo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistintaBasi.CodiceArticolo)
            </td>
            <td>
