@model IEnumerable<AuthSystem.Models.DistintaBase>

@{
    ViewData["Title"] = "Index";
}
<h1>Distinta base</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArticoloPadre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticoloFiglio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantità)
            </th>
            <th><a asp-action="Create" class="btn btn-outline-success "><i class="far fa-plus-square"></i>Distinta base</a></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArticoloPadre.CodiceArticolo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticoloFiglio.CodiceArticolo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantità)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDistintaBase"><i class="fa fa-marker fa-lg"></i></a> |

                <a asp-action="Delete" asp-route-id="@item.IdDistintaBase " class="text-danger ml-1"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
