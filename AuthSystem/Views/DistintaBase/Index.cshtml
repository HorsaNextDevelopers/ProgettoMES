@model IEnumerable<AuthSystem.Models.DistintaBase>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Articoli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DistintaBasi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantità)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
